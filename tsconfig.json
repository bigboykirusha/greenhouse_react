{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "esnext",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}